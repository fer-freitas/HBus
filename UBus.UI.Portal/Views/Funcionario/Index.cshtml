@model IEnumerable<UBus.Application.ViewModels.FuncionarioViewModel>

@{
    ViewData["Title"] = "Index";
}
<!-- Default box -->
<div class="box">
    <div class="box-body">
        <div class="row">
            <div class="col-md-12">
                <div>
                    <div class="pull-left">
                        <a asp-action="Create" class="btn btn-primary">
                            <span title="Inserir novo" class="glyphicon glyphicon-plus-sign"></span> Inserir novo
                        </a>
                    </div>
                </div>

                <br />
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.PrimeiroNome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UltimoNome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ativo)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PrimeiroNome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UltimoNome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ativo)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</div>