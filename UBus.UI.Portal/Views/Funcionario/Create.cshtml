@model UBus.Application.ViewModels.FuncionarioViewModel
@{
    ViewData["Title"] = "Create";
}

<!-- Default box -->
<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">Criar funcionário</h3>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="PrimeiroNome" class="control-label"></label>
                        <input asp-for="PrimeiroNome" class="form-control" />
                        <span asp-validation-for="PrimeiroNome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UltimoNome" class="control-label"></label>
                        <input asp-for="UltimoNome" class="form-control" />
                        <span asp-validation-for="UltimoNome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Ativo" class="control-label"></label>
                        <input asp-for="Ativo" />
                        <span asp-validation-for="Ativo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input id="submitForm" value="Create" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-info">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(function () {
            $('#submitForm').click(function () {
                var ativo = $('input[name="Ativo"]:checked').length > 0;
                if (ativo == true) {
                    $('#submitForm').submit();
                }
                else {
                    alert('Não é possível adicionar um cliente desativado!');

                }
            });
        });
    </script>
}
