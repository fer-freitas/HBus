@model IEnumerable<UBus.Application.ViewModels.VeiculoViewModel>

@{
    ViewData["Title"] = "Index";
}

<br />
<div class="jumbotron">
    <form asp-action="Index">

        <div class="col-md-12">
            <h4 class="display-4">Filtrar por rota</h4>
        </div>
        <div class="col-md-4">
            <select class="form-control" asp-items="@(new SelectList(ViewBag.Rotas, "Value", "Text"))" name="Id"></select>
        </div>
        <input type="submit" value="Filtrar" class="btn btn-primary" />
    </form>
</div>

<!-- Default box -->
<div class="box">
    <div class="box-body">
        <div class="row">
            <div class="col-md-12">
                <br />
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Marca)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Modelo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ItensAdicionais)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Marca)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Modelo)
                                </td>
                                <td>
                                    @if (item.ItensAdicionais != null)
                                    {
                                        foreach (var add in item.ItensAdicionais)
                                        {
                                            <text>@add.Nome</text>
                                            <br />
                                        }
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</div>
